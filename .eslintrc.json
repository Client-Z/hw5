{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "standart",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"no-tabs": 0,
		"space-before-function-paren": [
			"warn",
			{
				"asyncArrow": "always"
			}
		]
	},
	"plugins": ["prettier"]
}
